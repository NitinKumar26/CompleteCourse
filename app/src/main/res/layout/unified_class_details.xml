<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <com.google.android.gms.ads.formats.UnifiedNativeAdView
        android:id="@+id/unified_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5">

            <RelativeLayout
                android:background="@drawable/gradient_bottom_drawable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/colorExcellentBookText"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:id="@+id/text_serial_number"
                    android:padding="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:fontFamily="@font/raleway"
                    android:layout_alignParentStart="true"
                    tools:text="1."
                    />

                <TextView
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/colorExcellentBookText"
                    android:ellipsize="end"
                    android:id="@+id/ad_headline"
                    android:padding="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:fontFamily="@font/raleway"
                    android:layout_toEndOf="@id/text_serial_number"
                    tools:text="Ad Headline Here"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.gms.ads.formats.UnifiedNativeAdView>

</androidx.cardview.widget.CardView>