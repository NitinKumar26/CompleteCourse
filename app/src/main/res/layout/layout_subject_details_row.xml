<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5">

        <RelativeLayout
            android:background="@drawable/gradient_bottom_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/font_16"
                android:textColor="@color/colorExcellentBookText"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/text_serial_number"
                android:padding="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_4"
                android:fontFamily="@font/raleway"
                android:layout_alignParentStart="true"
                tools:text="1."
                />

            <TextView
                android:textSize="@dimen/font_16"
                android:textColor="@color/colorExcellentBookText"
                android:ellipsize="end"
                android:id="@+id/textChapter"
                android:padding="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_4"
                android:fontFamily="@font/raleway"
                android:layout_toEndOf="@id/text_serial_number"
                tools:text="Chapter Name Here"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
